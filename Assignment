sleep(1)
      
#Fill Arrays Append
for i in range (waterNum):
    size.append(uniform(5, 10))
    xSpeed.append(uniform(-5, -10))
    water.append(0)
 
#making water
for f in range (1):
    
    for i in range (waterNum):
        
       if xWater>350:
          smoke[i]=screen.create_line(xWater, yWater, xWater+ size[i], yWater + size[i], fill="blue")
       

          xWater=xWater+xSpeed[i]+1
          yWater=yWater+ySpeed

          screen.update()
          sleep(0.03)

#outro
C = screen.create_rectangle(0, 0, 1000, 800, fill="black")
C1 = screen.create_text(500, 400, fill="white", font="arial 25 italic bold", text="MY TV WAS TOAST :( ")
screen.update
sleep(3)

