#Randomized left picture
colours=["red", "pink", "blue", "green", "purple", "orange", "yellow"]
for i in range(40):
   c1 = uniform(60, 130)
   c2 = uniform(150, 275)
   C = choice(colours)
   screen.create_oval(c1, c2, c1+15, c2+15, fill=C, outline=C)
   
#Randomized Right picture 
colours=["red", "pink", "blue", "green", "purple", "orange", "yellow"]
for i in range(500):
   c1 = uniform(860, 920)
   c2 = uniform(150, 285)
   C = choice(colours)
   screen.create_line(c1, c2, c1+20, c2+20, fill=C)
   
#To make fire appear not right away
screen.update()
sleep(1)

#fire
for b in range (40):
    Fx = randint (200, 350)
    Fy = randint (350, 400)
    
    fire = screen.create_oval(Fx, Fy, Fx+30, Fy+30, fill = "orangered", outline = "orangered")
    screen.update()
    sleep(0.03)

#Fill Arrays Append
for i in range (smokeNum):
    xsmoke.append(uniform(200, 350))
    ysmoke.append(uniform(350, 400))
    Nsize.append(uniform(5, 10))
    xspeed.append(uniform(0.5, 0.5))
    yspeed.append(uniform(-7, -12))
    smoke.append(0)
 
#making smoke
for f in range (100):
    
    for i in range (smokeNum):
        
       smoke[i]=screen.create_oval(xsmoke[i], ysmoke[i], xsmoke[i]+ Nsize[i], ysmoke[i] + Nsize[i], fill="gray", outline="gray")
       
       xsmoke[i]=xsmoke[i]+xspeed[i]
       ysmoke[i]=ysmoke[i]+yspeed[i]
    
    screen.update()
    sleep(0.03)

    for i in range (smokeNum):
        screen.update()
        sleep(0)
        screen.delete(smoke[i])        
